@page "/empleados"
<h3>Empleados</h3>
<div class="justify-content-center flex-column align-content-between">
    <button type="button" class="btn btn-success mb-5">Agregar Empresa</button>
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>

                <th>Id</th>
                <th>Nombre Comercial</th>
                <th>Razon Social</th>
                <th>Rfc</th>
                <th>Direccion</th>
                <th>Correo</th>
                <th>Telefono</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in listaEmpleados)
            {
                <tr>
                    <td>@e.Id</td>
                    <td>@e.Nombre</td>
                    <td>@e.Apellidos</td>
                    <td>@e.Rfc</td>
                    <td>@e.Direccion</td>
                    <td>@e.Correo</td>
                    <td>@e.Telefono</td>
                    <td>
                        <button type="button" class="btn btn-info"><span class="oi oi-pencil" aria-hidden="true"></span></button>
                        <button type="button" class="btn btn-danger"><span class="oi oi-x" aria-hidden="true"></span></button>
                    </td>


                </tr>
            }
        </tbody>
    </table>
</div>