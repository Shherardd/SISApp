@page "/empleados"


<div class="justify-content-center flex-column align-content-between">
    <h2>Empleados</h2>
    <button type="button" class="btn btn-success mb-5" @onclick="NuevoEmpleado">Agregar Empleado</button>
    <button type="button" class="btn btn-outline-info mb-5" @onclick="ObtenerEmpleados"><span class="oi oi-loop-circular"></span>Actualizar</button>
    @if (isOpen)
    {<div class="position-absolute" style="z-index:8; min-width:1000px; top:10%; left:25%;">
            <button class="float-right btn btn-danger" @onclick=switchModal style="position:relative; top:-20px; right:20px; z-index:10;">X</button>
            <EmpleadosForm empleado=empleado Accion=@Accion></EmpleadosForm>
        </div>
        <div style="width:100%; height:100%; z-index:7; background-color:black; opacity:.30; left:0px; top:0px; overflow:hidden; position:absolute;" class="p-0"></div>
    }
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>

                <th>Id</th>
                <th>Nombre Comercial</th>
                <th>Razon Social</th>
                <th>Rfc</th>
                <th>Direccion</th>
                <th>Correo</th>
                <th>Telefono</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in listaEmpleados)
            {
                <tr>
                    <td>@e.Id</td>
                    <td>@e.Nombre</td>
                    <td>@e.Apellidos</td>
                    <td>@e.Rfc</td>
                    <td>@e.Direccion</td>
                    <td>@e.Correo</td>
                    <td>@e.Telefono</td>
                    <td>
                        <button type="button" class="btn btn-info" @onclick="() =>AutoCompletar(e)"><span class="oi oi-pencil" aria-hidden="true"></span></button>
                        <button type="button" class="btn btn-danger" @onclick="() =>EliminarEmpleado(e)"><span class="oi oi-x" aria-hidden="true"></span></button>
                    </td>


                </tr>
            }
        </tbody>
    </table>
</div>
